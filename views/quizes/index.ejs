<form method="get" action="/quizes">
	<fieldset>
	<legend>Buscar preguntas</legend>
		<br/>
		<p><input type="text" name="search" placeholder="Texto a buscar" />
		<input type="submit" value="Enviar" /></p>
		<br/>
	</fieldset>
</form>
<br/>
<table>
<% var i; tema = {otro:"Otro",humanidades:"Humanidades",ocio:"Ocio",
                  ciencia:"Ciencia",tecnologia:"TecnologÃ­a"};
                  for (i=0; i < quizes.length; i++) { %>
  <tr>
    <td><%= tema[quizes[i].tema] %>: <a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
    <%if(session.user){%>
    <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
    <td>
      <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
      </form>
    </td>
    <%}%>
  </tr>
<% } %>
<%if(session.user){%>
  <tr><td><a href="/quizes/new"><button type="button">Crear pregunta</button></a></td></tr>
<%}%>
</table>
